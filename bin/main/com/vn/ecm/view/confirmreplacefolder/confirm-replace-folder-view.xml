<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://confirmReplaceFolderView.title">
    <data>
        <instance id="existingFolderDc" class="com.vn.ecm.entity.Folder"/>
        <instance id="newFolderDc" class="com.vn.ecm.entity.Folder"/>
    </data>

    <layout>
        <vbox width="560px" padding="false" spacing="false" classNames="confirm-replace-root">

            <!-- Banner tiêu đề kiểu Windows -->
            <hbox spacing="true" alignItems="START" classNames="banner">
                <icon icon="vaadin:warning" classNames="warming-icon"/>
                <vbox spacing="xs">
                    <h3 text="Thư mục đã tồn tại ở nơi này" classNames=""/>
                    <span text="Nếu có tệp trùng tên, bạn sẽ được hỏi để thay thế tệp đó" classNames=""/>
                </vbox>
            </hbox>

            <hbox classNames="question indent">
                <h4 text="Bạn có muốn gộp thư mục này"/>
            </hbox>

            <!-- Thư mục cũ -->
            <hbox classNames="folder-row indent" alignItems="CENTER">
                <icon icon="vaadin:folder" classNames="folder-icon"/>
                <vbox classNames="folder-text">
                    <span dataContainer="existingFolderDc" property="name" classNames="name"/>
                    <hbox spacing="xs" classNames="date-line">
                        <span dataContainer="existingFolderDc" property="createdDate" classNames="date"/>
                    </hbox>
                </vbox>
            </hbox>

            <hbox classNames="between indent">
                <span text=" -với thư mục này-"/>
            </hbox>
            <!-- Thư mục mới -->
            <hbox classNames="folder-row indent" alignItems="CENTER">
                <icon icon="vaadin:folder" classNames="folder-icon"/>
                <vbox classNames="folder-text">
                    <span dataContainer="newFolderDc" property="name" classNames="name"/>

                    <hbox spacing="xs" classNames="date-line">
                        <span dataContainer="newFolderDc" property="createdDate" classNames="date"/>
                    </hbox>
                </vbox>
            </hbox>
            <!-- Nút xác nhận -->
            <hbox spacing="m" alignSelf="END" classNames="actions">
                <button id="yesBtn" text="Có" themeNames="primary"/>
                <button id="noBtn" text="Không" />
            </hbox>

        </vbox>
    </layout>
</view>
