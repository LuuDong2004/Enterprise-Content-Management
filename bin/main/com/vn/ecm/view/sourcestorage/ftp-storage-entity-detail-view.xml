<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://ftpStorageEntityDetailView.title"
      focusComponent="form">
    <data>
        <instance id="ftpStorageEntityDc"
                  class="com.vn.ecm.entity.FtpStorageEntity">
            <fetchPlan extends="_base">
            </fetchPlan>
            <loader id="ftpStorageEntityDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="editDetailFtpStorage"/>
        <action id="saveCloseAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>

        <formLayout id="form" dataContainer="ftpStorageEntityDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="nameStorageField" property="name" required="true"/>
            <select id="type" property="type" readOnly="true"/>
            <textField id="hostField" property="host" required="true"/>
            <textField id="portField" property="port" required="true" />
            <textField id="usernameField" property="username" required="true"/>
            <textField id="passwordField" property="password" required="true"/>
            <textField id="ftpPathField" property="ftpPath" required="true"/>
            <checkbox id="passiveModeField" property="passiveMode"/>
            <checkbox id="activeFtpField" property="active"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveCloseAction"/>
            <button id="testConnectionButton" text="Test" />
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
