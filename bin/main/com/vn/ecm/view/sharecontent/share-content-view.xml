<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="Chia sẻ dữ liệu">
    <layout spacing="true" padding="true">
        <vbox spacing="true" width="100%">
            <h2 text="Chia sẻ file/thư mục"/>
            <span id="itemNameLabel" text="Chưa chọn file hoặc thư mục"/>
            
            <h3 text="Thông tin người nhận"/>
            <textField id="recipientEmailField" 
                      label="Email người nhận" 
                      width="100%"
                      placeholder="example@email.com"
                      required="true"/>
            
            <textField id="messageField" 
                     label="Lời nhắn (tùy chọn)" 
                     width="100%"
                     placeholder="Nhập lời nhắn cho người nhận..."/>
            
            <datePicker id="expiryDatePicker" 
                       label="Ngày hết hạn (tùy chọn)" 
                       width="100%"
                       placeholder="Chọn ngày hết hạn"/>
            
            <hbox spacing="true" width="100%" justifyContent="END">
                <button id="generateLinkBtn" 
                       text="Tạo link chia sẻ" 
                       icon="LINK"
                       themeNames="primary"/>
            </hbox>
            
            <h3 text="Link chia sẻ"/>
            <hbox spacing="true" width="100%" alignItems="END">
                <textField id="shareLinkField" 
                          label="Link chia sẻ" 
                          width="100%"
                          readOnly="true"
                          placeholder="Link sẽ hiển thị sau khi tạo"/>
                <button id="copyLinkBtn" 
                       text="Sao chép" 
                       icon="COPY"
                       enabled="false"/>
            </hbox>
            
            <hbox spacing="true" width="100%" justifyContent="END">
                <button id="sendEmailBtn" 
                       text="Gửi email" 
                       icon="ENVELOPE"
                       themeNames="success"
                       enabled="false"/>
            </hbox>
        </vbox>
    </layout>
</view>