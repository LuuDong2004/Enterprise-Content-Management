<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://fileZipDialogView.title">
    <layout>
        <formLayout width="100%">
            <textField id="zipFileNameField"
                       label="Tên tệp ZIP"
                       width="100%"/>
            <passwordField id="zipPasswordField"
                           label="Mật khẩu"
                           width="100%"/>
        </formLayout>

        <hbox spacing="true"
              justifyContent="END">
            <button id="compressBtn"
                    text="Nén và tải xuống"/>
            <button id="cancelBtn"
                    text="Hủy"
                    themeNames="tertiary"/>
        </hbox>
    </layout>
</view>