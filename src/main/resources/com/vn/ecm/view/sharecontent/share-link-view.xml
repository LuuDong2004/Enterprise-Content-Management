<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="Chia sẻ dữ liệu">
    <layout spacing="true" padding="true" maxWidth="640px">
        <vbox spacing="true" width="100%">
            <h2 text="Bạn cần quyền truy cập"/>

            <span id="itemNameLabel" text="Đang tải..."/>
            <span id="ownerLabel" text=""/>
            <span id="permissionLabel" text=""/>

            <vbox spacing="true" width="100%">
                <h3 text="Chọn quyền bạn muốn yêu cầu"/>
                <radioButtonGroup id="requestPermissionField"
                                  width="100%"
                                  required="true"/>

                <textField id="requesterEmailField"
                           label="Email của bạn"
                           width="100%"
                           placeholder="Nhập email để chủ sở hữu liên hệ/cấp quyền"/>

                <textArea id="requestMessageField"
                          label="Lời nhắn (tùy chọn)"
                          width="100%"
                          height="AUTO"
                          placeholder="Giải thích lý do bạn cần quyền..."/>
            </vbox>

            <hbox spacing="true" width="100%" classNames="justify-end">
                <button id="sendRequestBtn"
                        text="Yêu cầu truy cập"
                        icon="ENVELOPE"
                        themeNames="primary"/>
            </hbox>
        </vbox>
    </layout>
</view>