<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="Di chuyển thư mục">
    <layout>
        <vbox width="400px" height="400px" padding="true" spacing="true">
            <treeDataGrid id="targetFoldersTree"
                          metaClass="Folder"
                          hierarchyProperty="parent"
                          width="100%"
                          height="100%">
                <columns>
                    <column property="name"/>
                </columns>
            </treeDataGrid>
            <hbox spacing="true" justifyContent="END">
                <button id="confirmMoveBtn" text="Di chuyển"/>
            </hbox>
        </vbox>
    </layout>
</view>


