<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="Xác nhận thay thế quyền">
    <layout>
        <hbox>
            <span id="iconSpan"
                  text="⚠"/>
            <span id="messageSpan"
                  text="Thao tác này sẽ thay thế tất cả các quyền được gán trực tiếp trên các đối tượng con bằng các quyền kế thừa từ đối tượng "/>
        </hbox>
        <label text="Bạn có muốn tiếp tục không?"/>
        <hbox spacing="true" alignSelf="END">
            <button id="noBtn" text="Không"/>
            <button id="yesBtn" text="Có" themeNames="primary"/>
        </hbox>
    </layout>
</view>