<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="5" author="ECM">
        <createIndex indexName="IDX_SHARE_PERM_REQ_REQUESTER" tableName="SHARE_PERMISSION_REQUEST">
            <column name="REQUESTER_EMAIL"/>
        </createIndex>
    </changeSet>
    <changeSet id="6" author="ECM">
        <createIndex indexName="IDX_SHARE_PERM_REQ_SHARE_LINK" tableName="SHARE_PERMISSION_REQUEST">
            <column name="SHARE_LINK_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="SHARE_LINK_ID" baseTableName="SHARE_PERMISSION_REQUEST"
                                 constraintName="FK_SHARE_PERMISSION_REQUEST_ON_SHARE_LINK" referencedColumnNames="ID"
                                 referencedTableName="SHARE_LINK"/>
    </changeSet>
    <changeSet id="7" author="ECM">
        <addForeignKeyConstraint baseColumnNames="RESPONDED_BY_ID" baseTableName="SHARE_PERMISSION_REQUEST"
                                 constraintName="FK_SHARE_PERMISSION_REQUEST_ON_RESPONDED_BY" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="8" author="ECM">
        <addForeignKeyConstraint baseColumnNames="FILE_ID" baseTableName="SHARE_LINK"
                                 constraintName="FK_SHARE_LINK_ON_FILE" referencedColumnNames="ID"
                                 referencedTableName="FILE_Descriptor"/>
    </changeSet>
    <changeSet id="9" author="ECM">
        <addForeignKeyConstraint baseColumnNames="FOLDER_ID" baseTableName="SHARE_LINK"
                                 constraintName="FK_SHARE_LINK_ON_FOLDER" referencedColumnNames="ID"
                                 referencedTableName="FOLDER"/>
    </changeSet>
    <changeSet id="10" author="ECM">
        <addForeignKeyConstraint baseColumnNames="OWNER_ID" baseTableName="SHARE_LINK"
                                 constraintName="FK_SHARE_LINK_ON_OWNER" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="11" author="ECM">
        <modifyDataType columnName="PERMISSION_TYPE" newDataType="VARCHAR(255)" tableName="SHARE_LINK"/>
    </changeSet>
    <changeSet id="12" author="ECM">
        <modifyDataType columnName="REQUESTED_PERMISSION" newDataType="VARCHAR(255)"
                        tableName="SHARE_PERMISSION_REQUEST"/>
    </changeSet>
    <changeSet id="13" author="ECM">
        <modifyDataType columnName="STATUS" newDataType="VARCHAR(255)" tableName="SHARE_PERMISSION_REQUEST"/>
    </changeSet>
</databaseChangeLog>