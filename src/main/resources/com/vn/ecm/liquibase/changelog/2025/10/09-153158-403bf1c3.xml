<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="ECM">
        <createTable tableName="SOURCE_STORAGE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SOURCE_STORAGE"/>
            </column>
            <column name="ACCESS_KEY" type="VARCHAR(255)"/>
            <column name="SECRET_ACCESS_KEY" type="VARCHAR(255)"/>
            <column name="REGION" type="VARCHAR(255)"/>
            <column name="BUCKET" type="VARCHAR(255)"/>
            <column name="CHUNK_SIZE" type="INT"/>
            <column name="ENDPOINT_URL" type="VARCHAR(255)"/>
            <column name="USE_PATH_STYLE" type="BOOLEAN"/>
            <column name="TYPE" type="VARCHAR(255)"/>
            <column name="ACTIVE" type="BOOLEAN"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="ECM">
        <dropTable cascadeConstraints="true" tableName="STORAGE"/>
    </changeSet>
</databaseChangeLog>