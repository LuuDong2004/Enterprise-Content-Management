<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="ECM">
        <addColumn tableName="FILE_Descriptor">
            <column name="SOURCE_STORAGE_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="ECM">
        <addColumn tableName="FOLDER">
            <column name="SOURCE_STORAGE_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="3" author="ECM">
        <addForeignKeyConstraint baseColumnNames="SOURCE_STORAGE_ID" baseTableName="FILE_Descriptor"
                                 constraintName="FK_FILE_DESCRIPTOR_ON_SOURCE_STORAGE" referencedColumnNames="ID"
                                 referencedTableName="SOURCE_STORAGE"/>
    </changeSet>
    <changeSet id="4" author="ECM">
        <addForeignKeyConstraint baseColumnNames="SOURCE_STORAGE_ID" baseTableName="FOLDER"
                                 constraintName="FK_FOLDER_ON_SOURCE_STORAGE" referencedColumnNames="ID"
                                 referencedTableName="SOURCE_STORAGE"/>
    </changeSet>
    <changeSet id="5" author="ECM">
        <dropColumn columnName="STORAGE" tableName="FILE_Descriptor"/>
    </changeSet>
    <changeSet id="6" author="ECM">
        <dropColumn columnName="STORAGE" tableName="FOLDER"/>
    </changeSet>
</databaseChangeLog>