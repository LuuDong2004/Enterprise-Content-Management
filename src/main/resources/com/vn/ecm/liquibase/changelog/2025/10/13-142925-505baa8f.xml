<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="ECM">
        <dropForeignKeyConstraint baseTableName="FILE_" constraintName="FK_FILE__ON_FOLDER"/>
    </changeSet>
    <changeSet id="2" author="ECM">
        <dropForeignKeyConstraint baseTableName="PERMISSION" constraintName="FK_PERMISSION_ON_FILE"/>
    </changeSet>
    <changeSet id="3" author="ECM">
        <createTable tableName="FILE_Descriptor">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_FILE_DESCRIPTOR"/>
            </column>
            <column name="NAME" type="NVARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="SOURCE_STORAGE_ID" type="UUID"/>
            <column name="EXTENSION" type="VARCHAR(255)"/>
            <column name="SIZE" type="BIGINT"/>
            <column name="LASTMODIFIED" type="DATETIME"/>
            <column name="FOLDER_ID" type="UUID"/>
            <column name="FILE_REF" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="ECM">
        <createTable tableName="SOURCE_STORAGE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SOURCE_STORAGE"/>
            </column>
            <column name="ACCESS_KEY" type="VARCHAR(255)"/>
            <column name="SECRET_ACCESS_KEY" type="VARCHAR(255)"/>
            <column name="REGION" type="VARCHAR(255)"/>
            <column name="BUCKET" type="VARCHAR(255)"/>
            <column name="CHUNK_SIZE" type="VARCHAR(255)"/>
            <column name="ENDPOINT_URL" type="VARCHAR(255)"/>
            <column name="TYPE" type="VARCHAR(255)"/>
            <column name="ACTIVE" type="BOOLEAN"/>
            <column name="WEB_ROOT_PATH" type="VARCHAR(255)"/>
            <column name="USE_PATH_STYLE" type="BOOLEAN"/>
        </createTable>
    </changeSet>
    <changeSet id="5" author="ECM">
        <addColumn tableName="FOLDER">
            <column name="FULL_PATH" type="VARCHAR(255)"/>
            <column name="SOURCE_STORAGE_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="6" author="ECM">
        <addForeignKeyConstraint baseColumnNames="FOLDER_ID" baseTableName="FILE_Descriptor"
                                 constraintName="FK_FILE_DESCRIPTOR_ON_FOLDER" referencedColumnNames="ID"
                                 referencedTableName="FOLDER"/>
    </changeSet>
    <changeSet id="7" author="ECM">
        <addForeignKeyConstraint baseColumnNames="SOURCE_STORAGE_ID" baseTableName="FILE_Descriptor"
                                 constraintName="FK_FILE_DESCRIPTOR_ON_SOURCE_STORAGE" referencedColumnNames="ID"
                                 referencedTableName="SOURCE_STORAGE"/>
    </changeSet>
    <changeSet id="8" author="ECM">
        <addForeignKeyConstraint baseColumnNames="SOURCE_STORAGE_ID" baseTableName="FOLDER"
                                 constraintName="FK_FOLDER_ON_SOURCE_STORAGE" referencedColumnNames="ID"
                                 referencedTableName="SOURCE_STORAGE"/>
    </changeSet>
    <changeSet id="9" author="ECM">
        <addForeignKeyConstraint baseColumnNames="FILE_ID" baseTableName="PERMISSION"
                                 constraintName="FK_PERMISSION_ON_FILE" referencedColumnNames="ID"
                                 referencedTableName="FILE_Descriptor"/>
    </changeSet>
    <changeSet id="10" author="ECM">
        <dropTable cascadeConstraints="true" tableName="FILE_"/>
    </changeSet>
</databaseChangeLog>