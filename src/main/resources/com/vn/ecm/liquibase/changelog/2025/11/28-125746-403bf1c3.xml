<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="ECM">
        <createIndex indexName="IDX_PERMISSION" tableName="PERMISSION">
            <column name="FOLDER_ID"/>
            <column name="USER_ID"/>
            <column name="INHERIT_ENABLED"/>
        </createIndex>
    </changeSet>
    <changeSet id="2" author="ECM">
        <createIndex indexName="IDX_PERMISSION_1" tableName="PERMISSION">
            <column name="FOLDER_ID"/>
            <column name="ROLE_CODE"/>
            <column name="INHERIT_ENABLED"/>
        </createIndex>
    </changeSet>
    <changeSet id="3" author="ECM">
        <dropIndex indexName="IDX_PERMISSION_FILE" tableName="PERMISSION"/>
    </changeSet>
    <changeSet id="4" author="ECM">
        <dropIndex indexName="IDX_PERMISSION_FOLDER" tableName="PERMISSION"/>
    </changeSet>
    <changeSet id="5" author="ECM">
        <dropIndex indexName="IDX_PERMISSION_USER" tableName="PERMISSION"/>
    </changeSet>
    <changeSet id="6" author="ECM">
        <modifyDataType columnName="FULL_PATH" newDataType="CLOB" tableName="FOLDER"/>
    </changeSet>
</databaseChangeLog>