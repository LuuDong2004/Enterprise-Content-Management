<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="ECM">
        <createTable tableName="SHARE_LINK">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SHARE_LINK"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="TOKEN" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="FOLDER_ID" type="UUID"/>
            <column name="FILE_ID" type="UUID"/>
            <column name="OWNER_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="RECIPIENT_EMAIL" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="EXPIRY_DATE" type="DATETIME"/>
            <column name="ACCESS_COUNT" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="ACTIVE" type="BOOLEAN"/>
            <column name="PERMISSION_TYPE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="MESSAGE" type="CLOB"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="ECM">
        <createTable tableName="SHARE_PERMISSION_REQUEST">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SHARE_PERMISSION_REQUEST"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="SHARE_LINK_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="REQUESTER_EMAIL" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="REQUESTED_PERMISSION" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="MESSAGE" type="CLOB"/>
            <column name="STATUS" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_DATE" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="RESPONDED_DATE" type="DATETIME"/>
            <column name="RESPONDED_BY_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="ECM">
        <createIndex indexName="IDX_SHARE_LINK_FILE" tableName="SHARE_LINK">
            <column name="FILE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="FILE_ID" baseTableName="SHARE_LINK"
                                 constraintName="FK_SHARE_LINK_ON_FILE" referencedColumnNames="ID"
                                 referencedTableName="FILE_Descriptor"/>
    </changeSet>
    <changeSet id="4" author="ECM">
        <createIndex indexName="IDX_SHARE_LINK_FOLDER" tableName="SHARE_LINK">
            <column name="FOLDER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="FOLDER_ID" baseTableName="SHARE_LINK"
                                 constraintName="FK_SHARE_LINK_ON_FOLDER" referencedColumnNames="ID"
                                 referencedTableName="FOLDER"/>
    </changeSet>
    <changeSet id="5" author="ECM">
        <createIndex indexName="IDX_SHARE_LINK_TOKEN" tableName="SHARE_LINK" unique="true">
            <column name="TOKEN"/>
        </createIndex>
    </changeSet>
    <changeSet id="6" author="ECM">
        <createIndex indexName="IDX_SHARE_PERM_REQ_REQUESTER" tableName="SHARE_PERMISSION_REQUEST">
            <column name="REQUESTER_EMAIL"/>
        </createIndex>
    </changeSet>
    <changeSet id="7" author="ECM">
        <createIndex indexName="IDX_SHARE_PERM_REQ_SHARE_LINK" tableName="SHARE_PERMISSION_REQUEST">
            <column name="SHARE_LINK_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="SHARE_LINK_ID" baseTableName="SHARE_PERMISSION_REQUEST"
                                 constraintName="FK_SHARE_PERMISSION_REQUEST_ON_SHARE_LINK" referencedColumnNames="ID"
                                 referencedTableName="SHARE_LINK"/>
    </changeSet>
    <changeSet id="8" author="ECM">
        <addForeignKeyConstraint baseColumnNames="OWNER_ID" baseTableName="SHARE_LINK"
                                 constraintName="FK_SHARE_LINK_ON_OWNER" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="9" author="ECM">
        <addForeignKeyConstraint baseColumnNames="RESPONDED_BY_ID" baseTableName="SHARE_PERMISSION_REQUEST"
                                 constraintName="FK_SHARE_PERMISSION_REQUEST_ON_RESPONDED_BY" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
</databaseChangeLog>